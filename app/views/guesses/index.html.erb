<p id="notice"><%= notice %></p>

<h1>Guesses</h1>

<table>
  <thead>
    <tr>
      <th>Game</th>
      <th>Letter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guesses.each do |guess| %>
      <tr>
        <td><%= guess.game %></td>
        <td><%= guess.letter %></td>
        <td><%= link_to 'Show', game_guess_path(@game, guess) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Guess', new_game_guess_path(@game) %>
